(function(){
  var html = '<%= j render @stars, format: :html %>';
  $('#repos .spinner').remove();
  <% if @page > 1 %>
    $('#repos ul').append(html);
  <% else%>
    $('#repos ul').html(html);
    $('#sidebar .active').removeClass('active');
    <% if @tag %>
      $('#tag-<%= @tag.id %>').find('.tag').addClass('active');
    <% else %>
      $('#sidebar .all-repos').addClass('active');
    <% end %>
  <% end %>
  <% if @next_page_url %>
    $('#repos').append('<a class="next" href="<%= @next_page_url %>"></a>');
    $('#repos ul').infiniteScroll('#repos');
  <% end %>
})();
