;(function(){
  $('#star-tags')
    .html('<%= j render "tag_form" %>')
    .modal()
    .find('.tm-input')
      .tagsManager({
        prefilled: <%= raw @tags.map(&:name).to_json %>,
        AjaxPush: '<%= j update_tag_star_path(@star) %>',
        AjaxPushAllTags: true
      })
      .focus();
})();
